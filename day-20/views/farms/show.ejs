<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>show farm</title>
</head>

<body>

  <h1>
    <%=farm.name %>
  </h1>
  <ul>
    <li>City:
      <%= farm.city%>

    </li>
    <li>Email:
      <%= farm.email%>

    </li>
  </ul>
  <h2>Product name</h2>

  <ul>
    <% for(let product of farm.products) { %>
      <li>
        <%=product.name%>-<%=product.category%>
      </li>
      <% } %>
  </ul>
  <a href="/farms">main page</a>
  <a href="/farms/<%=farm._id%>/edit">edit</a>
  <a href="/farms/<%=farm._id %>/products/new">add product</a>
  <form action="/products/<%=farm._id%>?_method=DELETE" method="POST">
    <button>delete</button>
  </form>
</body>

</html>